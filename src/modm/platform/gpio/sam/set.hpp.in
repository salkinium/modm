		}
	%% endfor
	}

	static void setInput()
	{
	%% for port, id in ports.items()
		if constexpr (mask({{id}})) {
			REG_PORT_DIRCLR{{id}} = mask({{id}});
		}
	%% endfor
	}

	static void setInput(InputType type)
	{
		configure(type);
		setInput();
	}

	static void setAnalogInput()
